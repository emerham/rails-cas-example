<p>
  <strong>Name:</strong>
  <%=h @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%=h @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%=h @post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |c| %>
    <p>
        <strong>Commenter:</strong>
        <%=h c.commenter %>
    </p>
    <p>
        <strong>Comment:</strong>
        <%=h c.body %>
    </p>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%= link_to 'Manage Comments', post_comments_path(@post) %>
